<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:clipToPadding="false"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cardview_crud"
        android:layout_below="@+id/txt1"
        android:elevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/txtFriendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear1"
                android:layout_below="@+id/txtFriendName">
                <TextView
                    android:id="@+id/txtHotline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Kontak : "
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txtFriendName"/>
                <TextView
                    android:id="@+id/txtFriendEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/montserrat_light"
                    android:textStyle="italic"
                    android:textSize="10sp"
                    android:layout_below="@+id/txtHotline"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear2"
                android:layout_below="@+id/linear1">
                <TextView
                    android:id="@+id/txtSumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Sumber : "
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txtFriendEmail"/>
                <TextView
                    android:id="@+id/txtFriendTelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sumber"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_below="@+id/txtSumber"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtFriendAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/linear2"
                android:layout_marginBottom="10dp"/>
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0.5dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:background="#000000"-->
<!--                android:layout_below="@+id/txtFriendAlamat"/>  -->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>