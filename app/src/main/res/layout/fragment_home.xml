<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:id="@+id/toolbar_home"
                app:titleTextColor="#000"
                android:elevation="4dp">
                <ImageView
                    android:id="@+id/logoApp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:src="@drawable/ic_logo_toolbar" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:text="Against Covid-19"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:gravity="center_vertical"/>
            </androidx.appcompat.widget.Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_below="@id/toolbar_home">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/cardView1"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="4dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_bg5"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Corona Virus Live Update"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/txtCorona"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Global"
                            android:layout_marginTop="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listCovidConfirmedGlobal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardView1"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listCovidRecoveredGlobal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/listCovidConfirmedGlobal"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listCovidDeathsGlobal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/listCovidRecoveredGlobal"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listCovidIndo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/listCovidDeathsGlobal"/>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
