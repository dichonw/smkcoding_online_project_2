<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListDataFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:id="@+id/toolbar_listData"
                android:elevation="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:text="Daftar"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:gravity="center_vertical"/>
            </androidx.appcompat.widget.Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_below="@id/toolbar_listData">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/cardView1"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_bg5"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail penyebaran"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/txtCorona"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Corona Virus"
                            android:layout_marginTop="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:clipToPadding="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/cardview_global"
                        android:layout_below="@+id/cardView1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:minHeight="200dp"
                                android:background="#fff"
                                android:id="@+id/gambar1"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Global"
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:layout_marginLeft="9dp"
                                android:layout_below="@+id/gambar1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Daftar Negara terdampak Corona Virus"
                                android:layout_below="@+id/text1"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:clipToPadding="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/cardview_indo"
                        android:layout_below="@+id/cardview_global">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:minHeight="200dp"
                                android:background="#fff"
                                android:id="@+id/gambar2"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Indonesia"
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:layout_marginLeft="9dp"
                                android:layout_below="@+id/gambar2"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Daftar Provinsi terdampak Corona Virus"
                                android:layout_below="@+id/text2"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </ScrollView>
    </RelativeLayout>
</FrameLayout>